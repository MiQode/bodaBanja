html
	head
		title Client Register &raquo; Home
		link(rel="stylesheet", href="/css/form.css")
		script(src="validator.js")
	body
		div.main-w3layouts.wrapper
			h1 New Client Registration Form
			div.main-agileinfo
				div.agileits-top
					form(action="/registerClient" method="POST" name="contactForm" onsubmit="return validateFor")
						input.text(type="text" name="firstName" placeholder="First Name" required="")
						div.error#fnameErr
						input.text(type="text" name="lastName" placeholder="Last Name" required="")
						div.error#lnameErr
						label Date of Birth:
						input.date(type="date" name="birthday" placeholder="Birth Day" required="")
						div.error#dobErr
						label Gender
						label.radio Female:
						input#fgender(type="radio", name="gender" value="female")
						label.radio Male:
						input#mgender(type="radio", name="gender" value="male")
						div.error#genderErr
						label Registration Date:
						input.date(type="date" name="updated_at" placeholder="" required="")
						div.error#regdateErr
						input(type="submit" value="Register")
						input(type="reset" value="Clear")
