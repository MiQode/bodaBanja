docktype
html
	head
		title Sales Executive Register &raquo; Home
		link(rel="stylesheet", href="/css/form.css")
	body
		div.main-w3layouts.wrapper
			h1 New Sales Executive Registration Form
			div.main-agileinfo
				div.agileits-top
					form(action="/registerExec" method="POST")
						input.text(type="text" name="firstName" placeholder="First Name" required="")
						input.text(type="text" name="lastName" placeholder="Last Name" required="")
						label Date of Birth:
						input.date(type="date" name="birthday" placeholder="Birth Day" required="")
						input.email(type="email" name="email" placeholder="Email" required="")
						
						input.text(type="password" name="password" placeholder="Password" required="")
						label Car:
						select#car(name="cars")
							option(value='0') -- Select -- 
							option(value='Volvo') Volvo
							option(value='Benz') Benz
							option(value='Toyota') Toyota
							option(value='Audi') Audi
						label Gender
						label.radio Female:
						input#fgender(type="radio", name="gender" value="female")
						label.radio Male:
						input#mgender(type="radio", name="gender" value="male")
						label Role
						label.radio Admin:
						input#role(type="radio", name="role" value="admin")
						label.radio Sales Executive:
						input#role(type="radio", name="role" value="salesExec")
						input(type="submit" value="Register")
						input(type="reset" value="Clear")
		ul.colorlib-bubbles
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
