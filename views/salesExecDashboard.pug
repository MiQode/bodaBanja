doctype html
html
    head
        link(rel="stylesheet", href="./style.css")
    body
        div.form-row
            div.col.form-group.col-md-3 
                form(method="POST" action="/logout")   
                    button.btn.btn-dark.btn-block(type="submit") Logout
        h2 Welcome #{user.firstName}
            p Here is your information
        table.table
            thead.thead-dark
                tr
                    th First Name 
                    td #{user.firstName}
                tr
                    th Last Name 
                    td #{user.lastName}
                tr
                    th Car
                    td #{user.cars}
                tr
                    th Birthday
                    td #{user.birthday}
                tr
                    th E- mail
                    td #{user.email}
                tr
                    th Gender
                    td #{user.gender}
                    